{% extends 'proStageTemplate.html.twig' %}

{% block title %}Prostage</title>{% endblock %}

{% block body %}
<h1>Bienvenue sur ProStage</h1>
<table class="table table-striped">
  <thead class="thead-dark" >
    <tr>
   
      <th scope="col">Intitule</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
  {% for stageCourant in stages %}
    <tr>

      <td><a href="{{path('stage',{'id':stageCourant.id})}}">{{stageCourant.titre}}</td>
      <td><a href="{{path('entreprise')}}">{{stageCourant.Entreprise.nom}}</td>
      <td><a href="{{path('formation')}}">DUT Inofrmatique</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
